{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./**/*.ts", "./**/*.js"],
    "exclude": [
      "node_modules",
      "**/dist/**",
      "**/graphql/**",
    ]
}